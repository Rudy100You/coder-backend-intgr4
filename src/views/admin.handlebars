<div class="container mt-4">
    <h1>User Management</h1>

    <h2>User List</h2>
    <ul class="list-group">
      {{#each data.users}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{this.firstName}} {{this.lastName}} - {{this.email}}
          <span>Role: {{this.role}}</span>
          <button class="btn btn-danger" onclick="confirmDelete('{{this._id}}')">Delete</button>
          <button class="btn btn-primary" onclick="confirmToggleRole('{{this._id}}', '{{this.role}}')">Toggle Role</button>
        </li>
      {{/each}}
    </ul>

    <a class="btn btn-primary mt-2" href="/users/create">Add User</a>

    <script src="js/admin.js">
   
    </script>
  </div>