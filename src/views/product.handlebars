
<div class="container mt-5 border border-success">
  <div class="row">
    <div class="col-lg-6">
      <div id="productCarousel" class="carousel slide border border-success" data-ride="carousel">
        <ul class="carousel-indicators">
        {{#each data.thumbnails}}
        <li data-target="#productCarousel" data-slide-to="{{@index}}"
        {{#if @first}}
         class="active"
        {{/if}}
        ></li>
        {{/each}}
        </ul>

        <div class="carousel-inner">
           {{#each data.thumbnails}}
          <div class="carousel-item active">
            <img src="{{this}}" class="d-block w-100" alt="Product Image {{@index}}">
          </div>
          {{/each}}
        </div>

        <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-lg-6">
      <!-- Product Description -->
      <h2>{{data.title}}</h2>
      <p>{{data.description}}</p>
      <!-- Add more product description content as needed -->
      <p class="font-weight-bold">Price: ${{price}}</p>
      <button class="btn btn-success" onclick="addProductToCart('{{data._id}}')">Add to Cart</button>
    </div>
  </div>
</div>